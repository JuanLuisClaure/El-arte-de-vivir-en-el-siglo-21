{
    "editor.wordWrap": "bounded",
    "editor.minimap.maxColumn": 80,
    "markdownShortcuts.bold.marker": "__",
    "markdownShortcuts.icons.citations": true,
    "reflowMarkdown.doubleSpaceBetweenSentences": true,
    "reflowMarkdown.resizeHeaderDashLines": true,
    "reflowMarkdown.preferredLineLength": 52,
    "markdownlint.config": {
        "default": true,
        "MD007": { "indent": 4 },
        "MD013": false,
        "MD041": false,
        "MD001": false,
        "no-hard-tabs": false
    },
    "emojisense.languages": {

        "markdown": true,
        "plaintext": {
            "markupCompletionsEnabled": false,
            "emojiDecoratorsEnabled": false
        },
        "scminput": true,
        "git-commit": true
    }
}